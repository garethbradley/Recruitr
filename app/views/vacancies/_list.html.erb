<%= table_for vacancies, :html => { :class => "listview" } do -%>
  <% column :title %>
  <% column :external_vacancy_number, :title => "Vacancy #", :width => "100px" %>
  <% column :location, :width => "200px" %>
  <% column :title => "Distance", :width => "100px" do |vacancy| %>
    <%
      d = vacancy.distance('NE3 5PA')
      d[:miles] unless d[:error].present?
    %>
  <% end %>
  <% column :title => "Actions", :width => "150px" do |vacancy| %>
    <% [link_to("Show", vacancy),
        link_to('Edit', edit_vacancy_path(vacancy)),
        link_to('Destroy', vacancy, confirm: 'Are you sure?', method: :delete)].join(" | ").html_safe %>
  <% end %>
<% end %>

