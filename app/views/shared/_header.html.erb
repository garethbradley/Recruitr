<header id="user">
  <nav>
    <ul class="hmenu">
      <%= render 'shared/auth_links' %>
    </ul>
  </nav>
</header>
<header id="logo">
<% if user_signed_in? %>
  <%= form_tag search_index_path, :method => 'get' do %>
    <div id="search">
      <%= text_field_tag :search, params[:search], :class => 'themed' %>
      <%= submit_tag "Search", :name => nil %>
    </div>
  <% end %>
<% end %>
  <a href="/"><%= image_tag "logo.png", :border => 0, :alt => "#{app_title} Logo", :class => 'logo' %></a>
</header>

